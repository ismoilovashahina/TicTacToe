<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity"
    tools:visibility="visible">

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="380dp"
        android:layout_height="380dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/board"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/zero_zero"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            app:layout_column="0"
            app:layout_row="0"
            app:srcCompat="@drawable/x" />

        <ImageView
            android:id="@+id/zero_one"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:layout_marginLeft="20dp"
            app:layout_column="1"
            app:layout_row="0"
            app:srcCompat="@drawable/x" />

        <ImageView
            android:id="@+id/zero_two"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:layout_marginLeft="20dp"
            app:layout_column="2"
            app:layout_row="0"
            app:srcCompat="@drawable/x" />

        <ImageView
            android:id="@+id/one_zero"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:layout_marginTop="20dp"
            app:layout_column="0"
            app:layout_row="1"
            app:srcCompat="@drawable/x" />

        <ImageView
            android:id="@+id/one_one"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            app:layout_column="1"
            app:layout_row="1"
            app:srcCompat="@drawable/x" />

        <ImageView
            android:id="@+id/one_two"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            app:layout_column="2"
            app:layout_row="1"
            app:srcCompat="@drawable/x" />

        <ImageView
            android:id="@+id/two_zero"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:layout_marginTop="20dp"
            app:layout_column="0"
            app:layout_row="2"
            app:srcCompat="@drawable/x" />

        <ImageView
            android:id="@+id/two_one"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            app:layout_column="1"
            app:layout_row="2"
            app:srcCompat="@drawable/x" />

        <ImageView
            android:id="@+id/two_two"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            app:layout_column="2"
            app:layout_row="2"
            app:srcCompat="@drawable/x" />

    </androidx.gridlayout.widget.GridLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tic Tac Toe GAME"
        android:textColor="#A278AC"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.56" />
</androidx.constraintlayout.widget.ConstraintLayout>